<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent"
android:layout_width="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/relativeLayoutUPRoot"
android:layout_height="wrap_content"
android:layout_width="wrap_content">
<ImageView 
android:id="@+id/imageUserProfile"
android:gravity="center_horizontal"
android:layout_width="fill_parent"
android:layout_height="180dp"
android:scaleType="centerCrop"
android:contentDescription="@string/imageUserProfileContentDescription"/>
<TextView 
android:id="@+id/userProfileLabel"
android:layout_width="fill_parent"
android:layout_height="40dp"
android:layout_alignBottom="@id/imageUserProfile"
android:layout_alignRight="@id/imageUserProfile"
android:textSize="22sp"
android:gravity="center|left"
android:textColor="#FFFFFF"
android:text="@string/textViewLabelProfiloUtente"
android:background="#33000000">
</TextView>
<View
android:id="@+id/lineBetweenImageAndList"
android:layout_width="fill_parent"
android:layout_height="5dip"
android:layout_alignBottom="@id/imageUserProfile"
android:background="#FF8800"/>

<TextView
android:id="@+id/textViewUsernameLabel"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@id/imageUserProfile"
android:textColor="#FF8800"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="2dp"
android:text="@string/textViewLabelUsername"
>
</TextView>
<View
android:id="@+id/lineUsername"
android:layout_width="fill_parent"
android:layout_height="1dip"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewUsernameLabel"
android:background="#FF8800"/>
<TextView
android:id="@+id/textViewUsername"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/lineUsername"
android:textSize="17sp"
>
</TextView>
<TextView
android:id="@+id/textViewNameLabel"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewUsername"
android:textColor="#FF8800"
android:text="@string/textViewLabelName">
</TextView>
<View
android:id="@+id/lineName"
android:layout_width="fill_parent"
android:layout_height="1dip"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewNameLabel"
android:background="#FF8800"/>
<TextView
android:id="@+id/textViewName"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/lineName"
android:textSize="17sp"
>
</TextView>
<TextView
android:id="@+id/textViewSurnameLabel"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewName"
android:text="@string/textViewLabelSurname"
android:textColor="#FF8800">
</TextView>
<View
android:id="@+id/lineSurname"
android:layout_width="fill_parent"
android:layout_height="1dip"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewSurnameLabel"
android:background="#FF8800"/>
<TextView
android:id="@+id/textViewSurname"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/lineSurname"
android:textSize="17sp"
>
</TextView>
<TextView
android:id="@+id/textViewEmailLabel"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewSurname"
android:text="@string/textViewLabelEmail"
android:textColor="#FF8800">
</TextView>
<View
android:id="@+id/lineEmail"
android:layout_width="fill_parent"
android:layout_height="1dip"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewEmailLabel"
android:background="#FF8800"/> 
<TextView
android:id="@+id/textViewEmail"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/lineEmail"
android:textSize="17sp"
>
</TextView>
<TextView
android:id="@+id/textViewPersonalMessageLabel"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewEmail"
android:text="@string/textViewLabelPersonalMessage"
android:textColor="#FF8800">
</TextView>
<View
android:id="@+id/linePersonalMessage"
android:layout_width="fill_parent"
android:layout_height="1dip"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/textViewPersonalMessageLabel"
android:background="#FF8800"/> 
<TextView
android:id="@+id/textViewPersonaleMessage"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="10dp"
android:layout_marginTop="2dp"
android:layout_marginBottom="2dp"
android:layout_below="@id/linePersonalMessage"
android:textSize="17sp"
android:text="@string/insertPersonalMessage"
android:textColor="#C0C0C0"
>
</TextView>
<ImageButton
android:id="@+id/buttonDeleteTrack"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginRight="10dp"
android:layout_alignTop="@+id/textViewPersonaleMessage"
android:layout_alignParentRight="true" 
android:contentDescription="@string/imageContentEditPersonalMessage"
android:src="@drawable/content_edit"
android:background="@null"/>
</RelativeLayout>
</ScrollView>